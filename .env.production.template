# NextAuth Configuration
NEXTAUTH_URL=https://your-app-name.herokuapp.com
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_DEMO_MODE=false

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Email Configuration
EMAIL_FROM=your_email_from_address_here
# Note: Email sending is handled by Supabase - no additional SMTP configuration needed

# Locale Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=en-GB

# Node Environment
NODE_ENV=production
