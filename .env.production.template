# NextAuth Configuration
NEXTAUTH_URL=https://your-app-name.herokuapp.com
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_DEMO_MODE=false

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Email Configuration
EMAIL_SERVER_HOST=your_smtp_host_here
EMAIL_SERVER_PORT=2525
EMAIL_SERVER_USER=your_smtp_username_here
EMAIL_SERVER_PASSWORD=your_smtp_password_here
EMAIL_SERVER_SECURE=false
EMAIL_FROM=your_email_from_address_here

# Locale Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=en-GB

# Node Environment
NODE_ENV=production
